<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
        style: "background-image: url(#{asset_path('post.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-12">
          <div class="event-description">
            <h1><%= @post.title %></h1>
            <p><%= @post.body %></p>
            <small class="text-secondary"><%= @post.created_at %></small>
          </div>

          <div class="buffer-top">
            <% if user_signed_in? %>
              <%= link_to 'Изменить', edit_post_path(@post),
              class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="event-comments buffer-top">
        <div class="buffer-both">
          <%= render partial: 'comments/form', locals: { comment: @comment || Comment.new(post: @post) } %>
          <%= render partial: 'comments/comment',
            collection: @post.comments.order(:created_at) %>
        </div>
      </div>
    </div>
  </div>
</div>
